<table class="table table-hover">
  <thead>
    <tr>
      <th>Book id</th>
      <th>Title</th>
      <th>Author</th>
      <th>Date out</th>   
      <th>Date in</th>    
    </tr>
  </thead>

  <tbody>
    <% @my_books.each do |book| %>
      <tr>
        <td><%= book.book_id %></td>
        <td><%= Book.find(book.book_id).title %></td>
        <td><%= Book.find(book.book_id).author %></td>
        <td><%= book.date_out %></td>
        <td><%= book.date_in %></td>       
      </tr>
    <% end %>
  </tbody> 
</table>
   