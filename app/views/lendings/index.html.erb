<p id="notice"><%= notice %></p>

<h1>Lendings</h1>

 <table class="table table-hover">
  <thead>
    <tr>
      <th>Book</th>
      <th>User</th>
      <th>Date out</th>
      <th>Date in</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @lendings.each do |lending| %>
      <tr>
        <td><%= lending.book.title %></td>
        <td><%= lending.user.email %></td>        
        <td><%= lending.date_out %></td>
        <td><%= lending.date_in %></td>
        <td><%= link_to 'Show', lending %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
